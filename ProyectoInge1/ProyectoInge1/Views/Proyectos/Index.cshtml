@model PagedList.IPagedList<ProyectoInge1.Models.Proyecto>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.Owin;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Listado de Proyectos</h2>



@using (Html.BeginForm("Index", "Proyectos", FormMethod.Get))
{
    <p>
        <div class="row">
            <div class="col-lg-5">
                Buscar: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                <input class="btn btn-success" type="submit" value="Buscar" />
            </div>
            <div class="col-lg-1 col-lg-pull-1">
                <a class="btn btn-info" href="../Proyectos">Mostrar Todos</a>
            </div>
            <div class="col-lg-2 col-lg-push-5">
                <a class="btn btn-success" href="Usuarios/Create">Crear </a>
            </div>
        </div>
    </p>
}
<table id="table1" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Nombre De Proyecto", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Estado", "Index", new { sortOrder = ViewBag.StateSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Líder", "Index", new { sortOrder = ViewBag.LeaderSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Fecha Inicio", "Index", new { sortOrder = ViewBag.InitDateSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Fecha Final", "Index", new { sortOrder = ViewBag.FinishDateSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id='@(item.nombre)' onclick="goToProjectDetails(this)">
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @{ if (item.estado != null)
                        {
                        @Html.DisplayFor(modelItem => item.estado)
                        }
                    }
                </td>
                <td>
                    @{
                        var id = item.lider;
                        var userList = ViewBag.userList as IEnumerable<ProyectoInge1.Models.Usuario>;
                        foreach (var user in userList)
                        {
                            if (user.cedula.Equals(id))
                            {
                                @Html.DisplayFor(modelItem => user.nombre);
                            }
                        }

                    }
                </td>
                <td>
                    @{ if (item.fechaInicio != null)
                        {
                        @Html.DisplayFor(modelItem => item.fechaInicio, "{0:dd/MM/yyyy}")
                        }
                    }
                </td>
                <td>
                    @{ if (item.fechaFinal != null)
                        {
                        @Html.DisplayFor(modelItem => item.fechaFinal, "{0:dd/MM/yyyy}") 
                        }
                      }
                </td>
            </tr>
         }
    </tbody>
</table>

<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

<script src="../../Scripts/jquery_Usuarios.js"></script>
