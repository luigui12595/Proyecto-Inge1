
@model PagedList.IPagedList<ProyectoInge1.Models.HistVersiones>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.Owin;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Historial de Versiones</h2>


@using (Html.BeginForm("Index", "GestCambios", FormMethod.Get))
{
    <p>
        <div class="row">

            <div class="col-lg-4">
                <label class="control-label col-md-4">Proyectos:</label>
                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                <input class="btn btn-success" type="submit" value="Buscar" />
            </div>

            <div class="col-lg-1 col-lg-push-2">
                <a class="btn btn-info" href="../GestCambios">Mostrar Todos</a>
            </div>

            <div class="col-lg-1 col-lg-push-4">
                <a class="btn btn-info" href="../GestCambios/Solicitudes">Solicitudes</a>
            </div>
        </div>
    </p>
}


<table id="table1" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Version", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Requerimiento", "Index", new { sortOrder = ViewBag.RolSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Proyecto", "Index", new { sortOrder = ViewBag.RolSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Solicitado por", "Index", new { sortOrder = ViewBag.RolSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Crear Solicitud", "Index", new { sortOrder = ViewBag.ProySortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id='@(item.versionRF+"~"+ item.idReqFunc+"~"+item.nomProyecto)' onclick="gotoVersionDetails(this)">
                <td>
                    @Html.DisplayFor(modelItem => item.versionRF)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReqFuncional.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nomProyecto)
                </td>
                <td>
                    @{
                        var id = item.realizadoPor;

                        var userList = ViewBag.userList as IEnumerable<ProyectoInge1.Models.Usuario>;
                        foreach (var user in userList)
                        {
                            if (user.cedula.Equals(id))
                            {
                                var solicitante = user.nombre + " " + user.apellidos;
                                @Html.DisplayFor(modelItem => solicitante);
                            }
                        }

                    }

                </td>

                <td>
                    <div class="col-lg-2 col-lg-push-5">
                        @Html.ActionLink("Crear", "Create", null, new { nomProyecto = item.ReqFuncional.nomProyecto, versionRF = item.versionRF, idReqFunc = item.ReqFuncional.id }, null)
                    </div>
                </td>

            </tr>
                        }
    </tbody>
</table>

<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

<script>
    function gotoVersionDetails(element) {
        var elementId = element.id;
        //alert(window.location.href);
        window.location.replace('../GestCambios/Details_Hist/' + elementId)
        // window.location.replace('GestCambios/Detalles/' + elementId)

    }
</script>



