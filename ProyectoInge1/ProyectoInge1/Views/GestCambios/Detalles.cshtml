@model ProyectoInge1.Models.ModGestionCambios

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

@using (Html.BeginForm())
{
 
@*---------------------------------------Detalles------------------------------------------------*@
<div class="elementoEditar">
    <div class="form-horizontal">
        <a class="btn btn-success" onclick="esconderEditar()">Modificar</a>
        <div class="col-lg-2 col-lg-push-6">
            @Html.ActionLink("Eliminar", "Eliminar", null, new { confirm = true, Proyecto = Model.ModeloHistVersion.idReqFunc }, new { @class = "btn btn-danger", @onclick = "return CancelarE();" })
        </div>
        <dl class="dl-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.ModeloHistVersion.nomProyecto, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.ModeloHistVersion.nomProyecto, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.ModeloHistVersion.nomProyecto, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ModeloHistVersion.idReqFunc, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.ModeloHistVersion.idReqFunc, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.ModeloHistVersion.idReqFunc, "", new { @class = "text-danger" })
            </div>
            <fildset name="Version">
                <legend>Datos de Estimación</legend>
                <div class="form-group">
                    @Html.LabelFor(model => model.ModeloHistVersion.versionRF, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.ModeloHistVersion.versionRF, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    @Html.ValidationMessageFor(model => model.ModeloHistVersion.versionRF, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ModeloHistVersion.fecha, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.ModeloHistVersion.fecha, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    @Html.ValidationMessageFor(model => model.ModeloHistVersion.fecha, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ModeloHistVersion.razon, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.TextAreaFor(model => model.ModeloHistVersion.razon, new { @class = "form-control", rows = 4, @readonly = true })
                    @Html.ValidationMessageFor(model => model.ModeloHistVersion.razon, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ModeloHistVersion.realizadoPor, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.ModeloHistVersion.realizadoPor, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    @Html.ValidationMessageFor(model => model.ModeloHistVersion.realizadoPor, "", new { @class = "text-danger" })
                </div>

        </dl>
    </div>
</div>
    
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}